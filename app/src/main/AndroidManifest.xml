<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smarttersstudio.goal">

    <application
        android:name=".offline.GoalOffline"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity android:name=".LoginActivity"
            android:theme="@style/RegisterTheme"/>
        <activity android:name=".ForgotActivity"
            android:theme="@style/RegisterTheme"/>
        <activity android:name=".CompanyActivity"
            android:theme="@style/AppTheme"
            android:label="Select A Company"/>
        <activity android:name=".ForumActivity"
            android:label="Forum"/>
        <activity android:name=".AddPostActivity"
            android:label="Ask Any Question"/>
        <activity android:name=".PdfActivity"
            android:label="Documents"/>
        <activity android:name=".ProfileActivity"
            android:label="Profile"/>
        <activity android:name=".CommentsActivity"
            android:label="Comments"/>
        <activity android:name=".SpecialPostActivity"
            android:label="Posts that you are tagged in"></activity>
    </application>

</manifest>